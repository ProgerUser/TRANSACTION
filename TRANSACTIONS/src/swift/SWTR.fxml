<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
	</center>
	<center>
	</center>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Входящие">
               <content>
                  <VBox>
                     <children>
                  		<ToolBar stylesheets="/borderpane.css">
                  			<items>
                  				<Button mnemonicParsing="false" onAction="#LoadFile" prefHeight="30.0" prefWidth="30.0" styleClass="Move">
                                 <tooltip>
                                    <Tooltip text="Перенести в локальную директорию">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Tooltip>
                                 </tooltip>
                                 <font>
                                    <Font size="14.0" />
                                 </font></Button>
                  				<Button mnemonicParsing="false" onAction="#Refresh" prefHeight="30.0" prefWidth="30.0" styleClass="Refresh1" visible="false">
                                 <tooltip>
                                    <Tooltip text="Обновить">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Tooltip>
                                 </tooltip></Button>
                              <ComboBox fx:id="TMREFR" prefHeight="30.0" prefWidth="70.0" visible="false">
                                 <tooltip>
                                    <Tooltip text="Частота обновления">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Tooltip>
                                 </tooltip>
                              </ComboBox>
                  			</items>
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                  		</ToolBar>
                        <TableView fx:id="STMT" editable="true" styleClass="mylistview" stylesheets="/TableView.css" tableMenuButtonVisible="true">
                           <columns>
                              <TableColumn fx:id="CHK" prefWidth="46.0" text="Выб." />
                              <TableColumn fx:id="MTTYPE" prefWidth="75.0" text="Тип" />
                              <TableColumn fx:id="MTNAME" prefWidth="200.0" text="Название документа" />
                              <TableColumn fx:id="DOCDATE" prefWidth="136.0" text="Дата документа" />
                              <TableColumn fx:id="CUR" prefWidth="61.0" text="Валюта" />
                              <TableColumn fx:id="SUMM" prefWidth="70.0" text="Сумма" />
      								<TableColumn fx:id="FILE_NAME" prefWidth="218.0" text="Название файла" />
      								<TableColumn fx:id="DT_CH" prefWidth="120.0" text="Дата изменения" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab text="Архив входящих" />
        </tabs>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TabPane>
   </center>
</BorderPane>
