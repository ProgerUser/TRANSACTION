<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="ap" stylesheets="@../../borderpane.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="su.sbra.psv.app.controller.EnterC">
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="307.0" minWidth="10.0" prefWidth="60.0" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
						<Label text="Логин:">
							<font>
								<Font name="Arial Bold" size="14.0" />
							</font>
						</Label>
						<Button fx:id="enter_id" mnemonicParsing="false" onAction="#enter" text="Вход" GridPane.columnIndex="1" GridPane.rowIndex="3">
							<font>
								<Font size="14.0" />
							</font>
						</Button>
						<Label text="Пароль:" GridPane.rowIndex="1">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
						</Label>
						<Label text="База:" GridPane.rowIndex="2">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
						</Label>
            <ComboBox fx:id="conurl" editable="true" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <PasswordField fx:id="pass" maxWidth="200.0" onKeyPressed="#enter_" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="login" editable="true" prefWidth="200.0" GridPane.columnIndex="1" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </top>
</BorderPane>
